{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["BETTER_AUTH_SECRET", "BETTER_AUTH_URL", "BASE_URL"],
    "tasks": {
        "build": {
            "outputs": ["dist/**"]
        },
        "typecheck": {
            "dependsOn": ["^typecheck"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}
