{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["BASE_URL"],
    "globalDependencies": [".env"],
    "tasks": {
        "build": {
            "outputs": ["dist/**"],
            "inputs": ["$TURBO_DEFAULT$", "schema.d.ts", ".env"],
            "dependsOn": ["//#generate-schema"]
        },
        "typecheck": {
            "dependsOn": ["^typecheck"]
        },
        "dev": {
            "persistent": true,
            "cache": false,
            "dependsOn": ["//#generate-schema"]
        },
        "//#generate-schema": {
            "outputs": ["schema.d.ts"]
        }
    }
}
