{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["BASE_URL"],
    "globalDependencies": [".env"],
    "tasks": {
        "build": {
            "outputs": ["dist/**"],
            "inputs": ["$TURBO_DEFAULT$", ".env"]
        },
        "typecheck": {
            "dependsOn": ["^typecheck"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}
